@model 留言板實作.Models.guestbook

@{
    ViewBag.Title = "修改留言";
}

@using (Html.BeginForm())
{
    <h3>修改留言</h3>

    @*建立修改留言表格*@
    <table>
        <tr>
            <td>@Html.LabelFor(model => model.ID)</td>
            <td>@Model.ID</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.postContent)</td>
            <td>
                @Html.TextBoxFor(model => model.postContent)
                @Html.ValidationMessageFor(model => model.postContent)
            </td>
        </tr>
    </table>

    if (Model.parent == 0)
    {
        <input type="submit" value="修改留言" />
    }
    else
    {
        <text>此留言已回復, 無法修改</text>
        @Html.ActionLink("返回列表", "Index")
    }
}

@*匯入驗證欄位所需Javascript*@
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/jquery_unobtrusive")
}